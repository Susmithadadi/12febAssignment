hhp=400
dp=200
oils=2000
grains=500
friuts=400
cname=input('enter customer name')
cphno=int(input('enter custmoer phone number'))
hhpq=int(input('enter no.of hhp products'))
dpq=int(input('enter no.of dpq products'))
oilsq=int(input('enter no. of oil pactes'))
grainsq=int(input('enter no.of  grains products '))
friutsq=int(input('enter number no.of friuts'))
bill=(hhp*hhpq)+(dp*dpq)+(oils*oilsq)+(grains*grainsq)+(friuts+friutsq)
print('total bill',bill)
if bill>5000:
    disc=bill*10/100
elif bill>3000:
    disc=bill*8/100
    tax=bill*10/100
elif bill>2000:
      disc=bill*5/100
elif bill>1000:
     disc=bill*3/100
else:
    tax=bill*18/100
    mainbill=bill-disc*tax
    print('bill amount:',mainbill)
    
  
